{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./build",
    "baseUrl": "src",
    "paths": {
      "http/*": ["http/*"],
      "config/*": ["config/*"],
      "config": ["config"],
      "entities/*": ["entities/*"],
      "entities": ["entities"],
      "features/*": ["features/*"],
      "features": ["features"],
      "utils/*": ["utils/*"],
      "utils": ["utils"],
      "logging": ["logging"],
      "db": ["db"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
